<div class="info">
	<p><strong>Nmae: </strong><%= @attraction.name %></p>
	<p><strong>Total Number of Users: </strong> <%= @attraction.users.count %></p>
	<p><strong>Ticket Requirment: </strong> <%= @attraction.tickets %></p>
	<p><strong>Height Requirment: </strong> <%= @attraction.min_height %></p>
	<p><strong>Nausea Rating: </strong> <%= @attraction.nausea_rating %></p>
	<p><strong>Happiness Rating</strong> <%= @attraction.happiness_rating %></p>
</div> 

 <%= form_tag("/rides/new", method: 'post') do %>
  <%= hidden_field_tag 'user_id', session[:user_id] %>
  <%= hidden_field_tag 'attraction_id', @attraction.id %>
  <%= submit_tag "Go on this ride"%>
 <% end %>

<% if admin? %>
 <button>
 	<%= link_to "Edit Attraction", edit_attraction_path(@attraction.id) %>
 </button>
<% end %>